{
    "name": "Test Upgrade",
    "id": "testupgrade",
    "packaging_format": 1,
    "requirements": {
        "yunohost": ">> 2.3.15"
    },
    "description": {
        "en": "Dummy app for testing upgrade. Development purpose."
    },
    "maintainer": {
        "name": "opi",
        "email": "opi@zeropi.net"
    },
    "version": "1",
    "url": "http://yunohost.org/contribute",
    "categories": [
        "dev"
    ],
    "multi_instance": "true",
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for TestUpgrade"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for TestUpgrade"
                },
                "example": "/testupgrade",
                "default": "/testupgrade"
            }
        ]
    }
}
